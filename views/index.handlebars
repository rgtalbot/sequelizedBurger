<div class="container">
    <div class="row text-center">
        <div class="col-xs-12">
            <div class="jumbotron burgerHead">
                <h1>Eat-Da-Burger!</h1>
                <form method="POST" action="/burgers/create" class="form-inline">
                    <div class="form-group">
                        <input type="hidden" name="devoured" value="0"/>
                        <label class="sr-only" for="burger-input">Delicious burger</label>
                        <input name="burger" type="text" class="form-control" id="burger-input"
                               placeholder="Enter a burger"/>
                    </div>
                    <button type="submit" class="btn btn-default">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading">BURGERS</div>
                <div id="burgers-added" class="panel-body">

                    <hr>

                    {{#each burgers}}
                        {{#unless devoured}}
                            <form method="POST" action="/burgers/update/{{burger_id}}?_method=PUT" class="form-inline">
                                <div class="row text-center">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <input type="hidden" name="devoured" value="1"/>
                                            <label class="sr-only">Delicious burger</label>
                                            <p class="form-control-static">{{ burger_name }}</p>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">

                                        <button id="burger-id{{burger_id}}" type="submit" class="btn btn-default">EAT
                                            ME!
                                        </button>
                                    </div>
                                </div>

                                <hr>
                            </form>
                        {{/unless}}
                    {{/each}}

                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading">DEVOURED BURGERS</div>
                <div id="burgers-devoured" class="panel-body">

                    <hr>

                    {{#each burgers}}
                        {{#if devoured}}
                            <form method="POST" action="/burgers/delete/{{burger_id}}?_method=DELETE"
                                  class="form-inline">
                                <div class="row text-center">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="sr-only">Devoured burger</label>
                                            <p class="form-control-static">{{ burger_name }}</p>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <button id="burger-id{{burger_id}}" type="submit" class="btn btn-default">
                                            DELETE!
                                        </button>
                                    </div>
                                </div>
                                <hr>
                            </form>
                        {{/if}}
                    {{/each}}

                </div>
            </div>
        </div>
    </div>

</div>